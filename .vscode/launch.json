{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Deno",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--inspect-brk",
        "-A",
        "tdlox/index.ts",
        "${input:fileName}"
      ],
      "outputCapture": "std",
      "attachSimplePort": 9229
    }
  ],
  "inputs": [
    {
      "id": "fileName",
      "description": "The filename of the lox program to execute",
      "type": "promptString"
    }
  ]
}
